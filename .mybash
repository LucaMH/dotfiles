elif [ -x "$(command -v vim)" ]; then
    export VISUAL=vim
    export EDITOR=vim
fi

#FUNCTIONS
#mkcd
function mkcd {
    if [ ! -n "$1" ]; then
        echo "You need to enter the name of the directory you want to create! (no blanks supported....)"
    elif [ -d $1 ]; then
        echo "\`$1' already exists..."
    else
        mkdir $1 && cd $1
    fi
}

